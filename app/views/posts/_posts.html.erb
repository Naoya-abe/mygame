<% if posts %>
  <div class="row">
    <% posts.each do |post| %>
      <div class="post">
        <div class="col-md-3 col-sm-4 col-xs-12">
          <div class="panel panel-default">
            <div class="panel-heading text-center">
              <p class="user_name text-left"><img src="<%= post.user.image.thumb30.url%>" alt="" >　<%= post.user.name %></p>
              <img src="<%= post.game.image_url %>" alt="" >
            </div>
            <div class="panel-body text-center">
              <p class="game-title"><%= post.game.title %></p>
              <p class="post_impression"><%= post.impression %></p>
            <% if user_signed_in? %>
              <%= render 'favorites/favorite_button', post: post %>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>