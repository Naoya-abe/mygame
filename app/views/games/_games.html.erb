<% if games %>
  <div class="row">
    <% games.each do |game| %>
      <div class="game">
        <div class="col-md-3 col-sm-4 col-xs-12">
          <div class="panel panel-default">
            <div class="panel-heading text-center">
              <img src="<%= game.image_url %>" alt="" >
            </div>
            <div class="panel-body">
              <p class="game-title"><%= game.title %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>