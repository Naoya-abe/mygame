<h1>お気に入りランキング</h1>
<% if @posts.present? %>
  <div class="row">
    <% @posts.each_with_index do |post, index| %>
      <div class="post">
        <div class="col-md-3 col-sm-4 col-xs-12">
          <div class="panel panel-default">
            <div class="panel-heading text-center">
              <p class="user_name text-left"><%= post.user.name %></p>
              <img src="<%= post.game.image_url %>" alt="" >
            </div>
            <div class="panel-body">
              <p class="game-title"><%= post.game.title %></p>
              <p class="post_impression"><%= post.impression %></p>
              <% if user_signed_in? %>
                <%= render 'favorites/favorite_button', post: post %>
              <% end %>
            </div>
          </div>
          <div class="panel-footer">
              <p class="text-center"><%= index+1 %>位: <%= @favorite_counts[post.id] %> いいね！ </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
